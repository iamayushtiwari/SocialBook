<li id="post-<%=post._id%>">
    <p>
        <% if(locals.user && locals.user.id==post.user.id){ %>
            <small>
                <a class="delete-post-button" href="/post/destroy/<%=post.id%>">
                    X
                </a>
            </small>
            <%}%>
                <%=post.context%>
                    <br>
                    <small>
                        <%= post.user.name %>
                    </small>
    </p>
    <div>

    </div>
    <div class="post-comment">
        <%if(locals.user){%>
            <form action="/comments/create" method="post">
                <input type="text" name="content" placeholder="Type here to add Comment....." required>
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="Add Comment">
            </form>
            <%}%>
    </div>
    <br>
    <button type="button" class="text-white text-sm px-2 py-1 rounded-md bg-blue-500 hover:bg-blue-600">likes 0</button>
    <div class="post-comment-list">
        <ul id="post-comment-<%= post._id%>">
            <% for(comment of post.comments){%>
                <%-include('_comment') -%>
                    <%}%>
        </ul>
    </div>
</li>
<hr>
<script src="../assets/js/home_post.js"></script>